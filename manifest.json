{
    "manifest_version": 3,
    "name" : "Tab Manager",
    "description": "Automatically groups tabs of same website",
    "version": "1.0",  
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },

    "background": {
        "service_worker": "tabs.js"
    },

    "action":{
        "default_icon":{
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
      }
    },

    
    "host_permissions":[
        "https://*/*"
    ],

    "permissions": [
        "tabGroups",
        "tabs"
    ]
}